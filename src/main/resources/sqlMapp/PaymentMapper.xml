<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="PaymentMapper">

	<resultMap type="Payment" id="paymentResultMap">
		<id property="id" column="id" />
	    <result property="id" column="id" />
		<result property="amount" column="amount" />
		<result property="date" column="date" />
	</resultMap>

	<select id="findPaymentById" parameterType="int" resultType="Payment">
        SELECT *
         FROM postmodel.payments WHERE id=${id}
    </select>

<insert id="insertPayment" parameterType="Payment">
    	INSERT INTO postmodel.payments(amount, date)
    	VALUE(${amount}, #{date},)
    </insert>
    
    <delete id="deletePayment" parameterType="Payment">
    	DELETE FROM postmodel.payments WHERE id=${id}
    </delete>
    
    <update id="updatePayment" parameterType="Payment">
    	UPDATE postmodel.payments SET amount=#{amount} WHERE id=${id}
    </update>
    
    <select id="multiSearch" resultType="Payment">
    	SELECT * FROM postmodel.payments
    </select>



</mapper>