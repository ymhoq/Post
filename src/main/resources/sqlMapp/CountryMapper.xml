<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.post.mybatis.po.CountryMapper">

	<resultMap type="Country" id="countryResultMap">
		<id property="id" column="id" />
	    <result property="name" column="name" />
	</resultMap>

	<select id="findCountryById" parameterType="int" resultType="Country">
        SELECT *
         FROM postmodel.countrys WHERE id=${id}
    </select>

<insert id="insertCountry" parameterType="Country">
    	INSERT INTO postmodel.countrys(name)
    	VALUE(#{name})
    </insert>
    
    <delete id="deleteCountry" parameterType="Country">
    	DELETE FROM postmodel.countrys WHERE id=${id}
    </delete>
    
    <update id="updateCountry" parameterType="Country">
    	UPDATE postmodel.countrys SET name=#{name} WHERE id=${id}
    </update>
    
    <select id="multiSearch" resultType="Country">
    	SELECT * FROM postmodel.countrys
    </select>



</mapper>